{
  "name": "@geobuff/buff-ui",
  "version": "0.1.12",
  "description": "GeoBuff Component Library",
  "main": "/dist",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geobuff/buff-ui.git"
  },
  "scripts": {
    "build": "npm-run-all clean check:* build:* export:*",
    "build:scripts": "NODE_ENV=production babel --extensions \".ts,.tsx,.js,.jsx\" ./src --out-dir ./dist",
    "clean": "rimraf dist && npx mkdirp dist",
    "check:lint": "eslint --ext .ts,.tsx,.js,.jsx ./ --fix --max-warnings 1",
    "check:types": "tsc --project ./tsconfig.json",
    "publish:components": "cd ./dist && npm i --production && npm publish --access public",
    "publish:storybook": "NODE_ENV=storybook-production build-storybook -o dist-storybook",
    "test": "jest",
    "test:watch": "jest --watch",
    "export:package-json": "cp package.json dist/",
    "export:images": "copyfiles -u 1 src/**/*.{png,jpg,jpeg,gif,svg} dist/",
    "storybook": "start-storybook -p 6007"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.2.1",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.9.0",
    "framer-motion": "^6.5.0",
    "hamburger-react": "^2.5.0",
    "react-div-100vh": "^0.7.0",
    "react-swipeable": "^7.0.0",
    "twemoji": "^14.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.0",
    "@babel/core": "^7.17.2",
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/plugin-proposal-export-default-from": "^7.16.0",
    "@babel/plugin-proposal-function-bind": "^7.16.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-classes": "^7.16.0",
    "@babel/plugin-transform-destructuring": "^7.16.0",
    "@babel/plugin-transform-spread": "^7.16.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@chakra-ui/storybook-addon": "^4.0.14",
    "@storybook/addon-essentials": "^6.4.18",
    "@storybook/builder-webpack5": "^6.5.14",
    "@storybook/manager-webpack5": "^6.5.14",
    "@storybook/react": "^6.3.7",
    "@testing-library/jest-dom": "^5.16.4",
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-storybook": "^0.6.8",
    "jest": "^27.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^27.1.3",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.4.2",
    "webpack": "^5.73.0"
  }
}
